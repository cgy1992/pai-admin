/* pages/play/play.wxss */
.video{
  width: 100%;
  height: 220px;
  top: 0;
  z-index: 999;
  position: fixed;
}
page{
  background: #191919;
  color: #fff;
}
.title{
  float: left;
  font-size: 20px;
  margin-left: 20px;
}
/* .desc{
  font-size: 15px;
  float: right;
  margin-right: 20px;
} */
.right{
  width: 21px;
  height: 21px;
  float: right;
  margin-top: 15px;
  margin-left: 5px;
}
.title-line{
  height: 50px;
  line-height: 50px;
  margin-top: 235px;
}
.tag{
  margin-left: 20px;
  font-size: 12px;
  color: #ccc;
}
.line-height{
  height: 0px;
  border: 0.5px solid rgb(54, 54, 54);
  margin: 30px 0;
}
.desc-title
{
  margin-left: 20px;
  margin-bottom: 15px;
  font-size: 20px;
}
.desc{
  font-size: 14px;
  color: rgb(128, 128, 128);  
}
.scroll-item-image{
  width: 64px;
  height: 64px;
  border-radius: 50%;
}
.scroll-like{
  flex-direction: row;
  white-space: nowrap;
}
.scroll-item{
  text-align: center;
  display: inline-block;
  overflow: hidden;
  width: 26%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.item-list{
  width: 50px;
  height: 50px;
  background: rgb(49, 49, 49);
  line-height: 50px;
  border-radius: 5%;  
}
.scroll-item-list{
  width: 50px;
  margin: 0 5px;
}
.item{
  margin: 0;
}
.active{
  color: #fa5200;
  background: #555;
}
.item-title-right{
  font-size: 12px;
  color: rgb(128, 128, 128);
  margin-left: 10px;
}
.item-title{
  margin: 0 0 20px 20px;
}